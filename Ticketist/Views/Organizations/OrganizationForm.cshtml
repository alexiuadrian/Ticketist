@model Ticketist.Models.Organization
@{
    ViewBag.Title = "OrganizationForm";
}

@if (Model.Id == 0)
{
    <h2>New Organization</h2>
}
else
{
    <h2>Edit Organization</h2>
}

@using (Html.BeginForm("Save", "Organizations"))
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Code)
        @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Code)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FoundationYear)
        @Html.TextBoxFor(m => m.FoundationYear, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FoundationYear)
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
